<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_date_event"
                    tools:text="Sep, 12 2018"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/iv_reminder"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_notifications_active_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
                android:id="@+id/tv_time_event"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                tools:text="09.00 AM"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    tools:text="Manchester City"
                    android:textAlignment="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_home_score"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="3"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/score"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/versus"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_away_score"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="3"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/score"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_away"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    tools:text="Chelsea"
                    android:maxLines="1"
                    android:textAlignment="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
