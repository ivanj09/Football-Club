<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="12dp">

        <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_badge"
                android:layout_width="@dimen/team_badge_48"
                android:layout_height="@dimen/team_badge_48"/>

        <TextView
                android:id="@+id/tv_team_name"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_year"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_stadium"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/tl_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@android:color/secondary_text_dark_nodisable"
            app:tabBackground="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>